{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@wdio/globals/types"]
  },
  "exclude": ["node_modules"]
}
